<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_result_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/search_result_background"
   >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rank_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/user_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66"
        />


    <TextView
        android:id="@+id/rank_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/rank_title"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rank_guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/username_title"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        app:layout_constraintStart_toEndOf="@id/rank_guideline"
        app:layout_constraintEnd_toStartOf="@id/user_guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/languages_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/best_languages_title"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        app:layout_constraintStart_toEndOf="@id/user_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>